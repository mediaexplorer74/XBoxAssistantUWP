<UserControl 
    x:Class="LRC.StarRatingControl"
    xmlns:lrc="clr-namespace:LRC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    Visibility="{Binding Path=ShowStarRating, Converter={StaticResource VisibilityConverter}, RelativeSource={RelativeSource Self}}" 
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Image x:Name="Star1" Grid.Row="0" Grid.Column="0" Width="24" Height="24" />
        <Image x:Name="Star2" Grid.Row="0" Grid.Column="1" Width="24" Height="24" />
        <Image x:Name="Star3" Grid.Row="0" Grid.Column="2" Width="24" Height="24" />
        <Image x:Name="Star4" Grid.Row="0" Grid.Column="3" Width="24" Height="24" />
        <Image x:Name="Star5" Grid.Row="0" Grid.Column="4" Width="24" Height="24" />
        <TextBlock x:Name="VoterCountDisplay" Grid.Row="0" Grid.Column="5" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Left" Margin="6,0,12,0" FontSize="20" FontFamily="Segoe WP" Foreground="#99FFFFFF"  />
    </Grid>
</UserControl>
